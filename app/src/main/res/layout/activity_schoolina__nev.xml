<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".Schoolina_NevActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/imageViewemoji"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:src="@drawable/emoji"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textviewoops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="oOps!"
        android:textSize="50dp"
        android:textColor="#ff0000"
        android:layout_below="@id/imageViewemoji"
        android:layout_centerHorizontal="true"
        android:rotation="10"/>
    <ImageView
        android:id="@+id/imageVieweoops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/workprocess"
        android:layout_below="@id/textviewoops"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>